      #  libxml2-dev \

       # libssl-dev \

        #libxt6



    ## Install CRAN packages	

    Rscript -e 'install.packages(c(

        "arules", "TSP", "TraMineR", "cluster", "dtw",

        "tidyverse", "dplyr", "ggplot2", "shiny", "mlr3",

